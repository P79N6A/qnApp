header{
    height:1.2rem;
    background-color: #fff;
    line-height:1.2rem;
    text-align: center;
    font-size:0.3rem;
    color:#4c5568;
    width:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:999;
}
.list{
    width:100%;
}
.list .list-item{
    width:100%;
}
.list .list-item .channel{
    margin:0.35rem 0.4rem 0.35rem 0.4rem;
    position:relative;
}
.list .list-item .channel h2{
    font-size:0.3rem;
    color:#333;
    font-weight:bold;
}
.list .list-item .channel h2 span{
    display:inline-block;
    width:5px;
    height:0.3rem;
    margin-right:0.28rem;
    background-color:#d13243;
    transform: translateY(2px);
}
.list .list-item .channel img{
    width:100%;
    height:100%;
}
.list .list-item .channel p{
    font-weight:normal;
    font-size:0.3rem;
    color:#4c5568;
    margin-bottom:0.3rem;
    display:inline-block;
}
.list .list-item .channel .listType{
    position:absolute;
    top:0.8rem;
    right:0.1rem;
    width:0.61rem;
    height:0.32rem;
    font-size:0.18rem;
    color:#fff;
    line-height:0.32rem;
    text-align:center;
    background-color: #d13243;
    border-radius: 0.06rem;
}
