.list .list-item .chunk{
    width:100%;
    height:0.2rem;
    background-color: #f7f7f7;
}
.list .list-item .channel .channelFn{
    display:flex;
    justify-content: space-between;
    font-size:0.24rem;
    color:#999;
    position: relative;
    margin-top:0.3rem;
}
.list .list-item .channel .channelFn .item-fn{
    position: relative;
}
.list .list-item .channel .channelFn .item-fn span{
    margin-left:0.45rem;
    color:#a3acbe;
    font-size:0.22rem;
}
.Mbroadcast,.attachment,.share{
    display:inline-block;
    width:0.29rem;
    height:0.33rem;
    margin-right:0.1rem;
    position:absolute;
    left:0;
    font-family: iconfont;
    font-size:0.35rem;
    color:#a3acbe;
}
