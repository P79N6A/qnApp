header{
    height:1rem;
    line-height:1rem;
    text-align: center;
    font-size:0.3rem;
    color:#fff;
    background-color: #514cea;
    width:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:999;
}
.list{
    width:100%;
}
.list .list-item{
    width:100%;
}
.list .list-item .channel{
    margin:0.25rem;
    position:relative;
}
.list .list-item .channel h2{
    font-size:0.3rem;
    color:#333;
    font-weight:bold;
}
.list .list-item .channel h2 span{
    display:inline-block;
    width:3px;
    height:0.3rem;
    margin-right:0.15rem;
    background:url('../img/shutiao.png') no-repeat center center;
    transform: translateY(2px);
}
.list .list-item .channel img{
    width:100%;
    height:3rem;
    margin-bottom:0.2rem;
    
}
.list .list-item .channel p{
    font-size:0.3rem;
    color:#333;
    margin-bottom:0.2rem;
    display:inline-block;
}
.list .list-item .channel .listType{
    position:absolute;
    top:0.7rem;
    right:0;
    width:1.35rem;
    height:0.7rem;
    font-size:0.24rem;
    color:#fff;
    line-height:0.7rem;
    text-align:center;
}
.list .list-item .channel .listType.live{
    background: url('../img/live.png') no-repeat 100% 100%;
    background-size:100% 100%;
}
.list .list-item .channel .listType.trailer{
    background: url('../img/trailer.png') no-repeat 100% 100%;
    background-size:100% 100%;
}
.list .list-item .chunk{
    width:100%;
    height:0.18rem;
    background-color: #eff3f7;
    border-top:1px solid #e1e1e1;
    border-bottom:1px solid #e1e1e1;
}
.list .list-item .channel .channelFn{
    display:flex;
    justify-content: space-between;
    font-size:0.24rem;
    color:#999;
    position: relative;
}
.list .list-item .channel .channelFn .item-fn{
    position: relative;
}
.list .list-item .channel .channelFn .item-fn span{
    margin-left:0.4rem;
}
.Mbroadcast,.attachment,.share{
    display:inline-block;
    width:0.36rem;
    height:0.36rem;
    margin-right:0.1rem;
    position:absolute;
    top:-0.05rem;
    left:0;
}
.Mbroadcast{
    background:url('../img/shoujizhibo.png') no-repeat 100% 100%;
    background-size:100% 100%;
}
.attachment{
    background:url('../img/lianxiancanyu-.png') no-repeat 100% 100%;
    background-size:100% 100%;
}
.share{
    background:url('../img/fengxiang.png') no-repeat 100% 100%;
    background-size:100% 100%;
}
.bottom{
    width:100%;
    color:#333;
    height:0.7rem;
    text-align: center;
    line-height:0.7rem;
    background-color: #eff3f7;
}
.blackBorder{width: 50% !important;height: 2.3rem !important;position: absolute;left: 25%;top: 1rem;}
#beforeTime{width: 50%;position: absolute;left: 25%;top: 30%;text-align: center;color: #fff;font-size: 0.25rem;  }
#beforeTime p{color:#fff}
.shareClass{
    position: absolute !important;
    right:0;
    top:-17px;
}