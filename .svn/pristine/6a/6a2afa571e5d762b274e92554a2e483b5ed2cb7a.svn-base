html,body{background:rgba(255,255,255,0.2);opacity: 0.7;}
.box{width: 100%;padding:0 4%;}
.list{width: 100%;}
.list-item{width: 100%;height: 1.4rem;padding-left: 5px;
    border-bottom: 1px solid #666;margin-bottom: 10px;}
.imgBox{width: 30%;height: 85%;}
.imgBox img{width: 100%;height: 100%;}
.detail{margin-left: 10px;width: 65%;height: 85%;position: relative;}
.detail .nameHeight{height: 65%;}
.normal{position: absolute;display: inline-block;width: 12%;height: 25%;right: -2%;top: 38%;
    background: url("../img/normal.png") no-repeat center;}
.check{background: url("../img/check.png") no-repeat center;}
.commend{width: 30%;height: 0.45rem;background: red;color: #fff;text-align: center;line-height: 0.45rem;}










.bottom{
    width:100%;
    color:#333;
    height:0.5rem;
    text-align: center;
    line-height:0.5rem;
}